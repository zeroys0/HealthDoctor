<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.BindCardActivity">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y194"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/y44"
            android:layout_marginTop="@dimen/y80"
            android:text="银行卡绑定"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x58" />
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y185">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:layout_marginTop="@dimen/y95"
                android:src="@drawable/arrow_left_black" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y160">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x45"
            android:textColor="@color/text_black"
            android:text="银行卡号"
            android:layout_marginLeft="@dimen/x32"
            android:layout_centerVertical="true"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:id="@+id/ed_card_no"
            android:textSize="@dimen/x45"
            android:textColor="@color/text_black"
            android:text=""
            android:background="@null"
            android:layout_marginLeft="@dimen/x300"
            android:gravity="end|center_vertical"
            android:paddingRight="@dimen/x36"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="@color/grey"
        android:layout_marginLeft="@dimen/x32"
        android:layout_marginRight="@dimen/x32"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y160"
        android:id="@+id/rl_bank">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x45"
            android:textColor="@color/text_black"
            android:text="选择银行"
            android:layout_marginLeft="@dimen/x32"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:id="@+id/tv_bank"
            android:textSize="@dimen/x45"
            android:textColor="@color/text_black"
            android:background="@null"
            android:text=""
            android:layout_marginLeft="@dimen/x300"
            android:gravity="end|center_vertical"
            android:paddingRight="@dimen/x36"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="@color/grey"
        android:layout_marginLeft="@dimen/x32"
        android:layout_marginRight="@dimen/x32"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y160">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x45"
            android:textColor="@color/text_black"
            android:text="身份证号"
            android:layout_marginLeft="@dimen/x32"
            android:layout_centerVertical="true"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ed_card"
            android:maxLines="1"
            android:textSize="@dimen/x45"
            android:background="@null"
            android:textColor="@color/text_black"
            android:text=""
            android:layout_marginLeft="@dimen/x300"
            android:gravity="end|center_vertical"
            android:paddingRight="@dimen/x36"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="@color/grey"
        android:layout_marginLeft="@dimen/x32"
        android:layout_marginRight="@dimen/x32"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y160">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x45"
            android:textColor="@color/text_black"
            android:text="持卡人姓名"
            android:layout_marginLeft="@dimen/x32"
            android:layout_centerVertical="true"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ed_name"
            android:maxLines="1"
            android:textSize="@dimen/x45"
            android:background="@null"
            android:textColor="@color/text_black"
            android:text=""
            android:layout_marginLeft="@dimen/x300"
            android:gravity="end|center_vertical"
            android:paddingRight="@dimen/x36"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="@color/grey"
        android:layout_marginLeft="@dimen/x32"
        android:layout_marginRight="@dimen/x32"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y160">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x45"
            android:textColor="@color/text_black"
            android:text="预留手机"
            android:layout_marginLeft="@dimen/x32"
            android:layout_centerVertical="true"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ed_phone"
            android:maxLines="1"
            android:textSize="@dimen/x45"
            android:background="@null"
            android:textColor="@color/text_black"
            android:text=""
            android:layout_marginLeft="@dimen/x300"
            android:gravity="end|center_vertical"
            android:paddingRight="@dimen/x36"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="@color/grey"
        android:layout_marginLeft="@dimen/x32"
        android:layout_marginRight="@dimen/x32"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y162">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x45"
            android:textColor="@color/text_black"
            android:text="验证码"
            android:layout_marginLeft="@dimen/x32"
            android:layout_centerVertical="true"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLength="11"
            android:inputType="phone"
            android:id="@+id/ed_sms_code"
            android:background="@null"
            android:layout_centerVertical="true"
            android:textSize="@dimen/x45"
            android:hint="请输入手机号"
            android:textColor="@color/text_black"
            android:textColorHint="#a9a9a9"
            android:layout_marginLeft="@dimen/x32"
            android:layout_toLeftOf="@+id/getmsmpass_TX"
            />
        <TextView
            android:layout_width="@dimen/x291"
            android:layout_height="@dimen/y99"
            android:textColor="@color/blue"
            android:textSize="@dimen/x45"
            android:text="获取验证码"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x32"
            android:id="@+id/getmsmpass_TX"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="@color/grey"
        android:layout_marginLeft="@dimen/x32"
        android:layout_marginRight="@dimen/x32"/>

    <Button
        android:layout_width="@dimen/x1014"
        android:layout_height="@dimen/y129"
        android:background="@drawable/btn_confirm"
        android:text="确认"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y50"
        android:id="@+id/btn_submit"
        />
</LinearLayout>