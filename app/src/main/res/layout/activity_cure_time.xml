        android:layout_height="@dimen/y80">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="一"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x42" />

        <TextView
