<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.IncomeActivity"
    android:orientation="vertical"
    android:background="@color/bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y716"
        android:background="@drawable/img_income_header"
        >
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y185"
            android:layout_marginTop="@dimen/y32">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:layout_marginTop="@dimen/y95"
                android:src="@drawable/arrow_left_white" />

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y108"
            android:text="我的收入"
            android:textColor="@color/white"
            android:textSize="@dimen/x60" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y120"
            android:text="订单明细"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x33"
            android:textColor="@color/white"
            android:id="@+id/tv_detail"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前账户余额"
            android:textSize="@dimen/x36"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y260"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y366"
            android:id="@+id/ll_balance"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x47"
                android:textColor="@color/white"
                android:text="￥"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x78"
                android:textColor="@color/white"
                android:text="7"
                android:id="@+id/tv_ex_time"
                />


        </LinearLayout>
        <Button
            android:layout_width="@dimen/x167"
            android:layout_height="@dimen/y54"
            android:text="提现"
            android:textColor="@color/blue"
            android:background="@drawable/bg_white_radius"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ll_balance"
            android:layout_marginTop="@dimen/y20"
            android:id="@+id/btn_draw"
            />
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/x1010"
        android:layout_height="93dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/y10"
        android:layout_marginBottom="@dimen/y20"
        app:cardCornerRadius="@dimen/x30"
        android:layout_marginLeft="@dimen/x36"
        android:layout_marginTop="-43dp"
        >
        <RelativeLayout
            android:layout_width="@dimen/x505"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/text_black"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="27dp"
                android:text="总订单数"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="260"
                    android:textSize="21sp"
                    android:textColor="@color/text_black"
                    android:id="@+id/tv_num"
                    android:layout_marginTop="56dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单"
                    android:textSize="13sp"
                    android:textColor="@color/text_black"
                    android:layout_marginTop="56dp"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="39dp"
                android:background="#dfdfdf"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/x505"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/text_black"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="27dp"
                android:text="累计收入"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textSize="13sp"
                    android:textColor="@color/text_black"
                    android:layout_marginTop="56dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:textSize="21sp"
                    android:textColor="@color/text_black"
                    android:id="@+id/tv_total_income"
                    android:layout_marginTop="56dp"/>

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y38">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="服务记录"
            android:textSize="@dimen/x42"
            android:layout_marginLeft="@dimen/x32"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x39"
            android:textColor="@color/text_black"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x32"
            android:id="@+id/tv_time"
            android:text="2020-10"
            android:drawableRight="@drawable/arrow_down_triangle_grey"
            android:drawablePadding="@dimen/x15"
            android:visibility="invisible"
            />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/y20"
        android:id="@+id/income_list"
        android:layout_marginBottom="@dimen/y30"
        />


</LinearLayout>