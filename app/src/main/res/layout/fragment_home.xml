<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/y614"
    android:background="@drawable/main_header"
    android:id="@+id/rl_personal_info"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="首页"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y108"
        android:textSize="@dimen/x54"
        />
    <net.leelink.healthdoctor.view.CircleImageView
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/y150"
        android:src="@drawable/default_head"
        android:layout_marginTop="@dimen/y194"
        android:layout_marginLeft="@dimen/x50"
        android:id="@+id/img_head"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x54"
        android:textColor="@color/white"
        android:text="name"
        android:id="@+id/tv_name"
        android:layout_toRightOf="@id/img_head"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y212"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x36"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/y228"
        android:layout_toRightOf="@+id/tv_name"
        android:layout_marginLeft="@dimen/x40"
        android:text="主任医师"
        android:id="@+id/tv_professional"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_head"
        android:layout_marginLeft="@dimen/x30"
        android:text="外科"
        android:textColor="@color/white"
        android:layout_below="@+id/tv_name"
        android:textSize="@dimen/x36"
        android:id="@+id/tv_subject"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_hospital"
        android:layout_toRightOf="@+id/tv_subject"
        android:layout_below="@+id/tv_name"
        android:textSize="@dimen/x36"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/x63"
        android:text="总医院"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人信息"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x117"
        android:textColor="@color/white"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_arrow_white_right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x63"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y168"
        android:layout_marginTop="@dimen/y360"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/rl_alarm">

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/x45" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_score"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y10"
                android:text="总评分"

                android:textColor="@color/white"
                android:textSize="@dimen/x29" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="120"
                android:textColor="@color/white"
                android:textSize="@dimen/x45" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_count"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y10"
                android:text="咨询量"
                android:textColor="@color/white"
                android:textSize="@dimen/x29" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/rl_set_meal"
            >

            <TextView
                android:id="@+id/tv_care_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="1330"
                android:textColor="@color/white"
                android:textSize="@dimen/x45" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_care_count"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y10"
                android:text="关注量"
                android:textColor="@color/white"
                android:textSize="@dimen/x29" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/x972"
        android:layout_height="@dimen/x318"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-40dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:elevation="@dimen/y20"
        app:cardCornerRadius="@dimen/x30">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_talk_cure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/y75"
                    android:src="@drawable/talk_cure" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/y71"
                    android:text="图文咨询"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/x36" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/rl_phone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/y75"
                    android:src="@drawable/telephone_cure" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/y71"
                    android:text="电话问诊"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/x36" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/rl_repair">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/y75"
                    android:src="@drawable/home_cure" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/y71"
                    android:text="上门问诊"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/x36" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/y75"
                    android:src="@drawable/hospital_cure" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/y71"
                    android:text="医院就诊"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/x36" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_radius"
        android:layout_marginLeft="@dimen/x56"
        android:layout_marginRight="@dimen/x56"
        android:layout_marginTop="@dimen/y24"
        android:layout_marginBottom="@dimen/y32">
        <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/refreshLayout"
            android:layout_marginTop="@dimen/y11">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/quest_list"/>
        </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>

    </LinearLayout>
</LinearLayout>
