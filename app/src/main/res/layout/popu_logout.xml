<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/x800"
        android:layout_height="@dimen/y550"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/dialog_login"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y52"
            android:text="账号注销确认"
            android:textColor="#333333"
            android:textSize="@dimen/x55" />

        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x81"
            android:layout_marginTop="@dimen/y160"
            android:layout_marginRight="@dimen/x60"
            android:text="@string/logout"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/x33" />

        <Button
            android:layout_width="@dimen/x236"
            android:layout_height="@dimen/y73"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/x81"
            android:layout_marginBottom="@dimen/y46"
            android:background="@drawable/bg_grey_radius_14"
            android:text="暂不注销"
            android:textColor="@color/text_black"
            android:id="@+id/btn_cancel"/>
        <Button
            android:layout_width="@dimen/x236"
            android:layout_height="@dimen/y73"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_red_radius_14"
            android:text="确认注销"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/y46"
            android:layout_marginLeft="@dimen/x81"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x65"
            android:id="@+id/btn_confirm"
            />
    </RelativeLayout>
</LinearLayout>
